<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:textColorSecondary">@color/colorTextLight</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <!--item name="android:windowBackground">@null</item-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- Form elements -->

    <!--Etiqueta flotante de Text Input-->
    <style name="AppTheme.FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!--Campo de texto-->
    <style name="FormEditText" parent="AppTheme">
        <!-- cursor y línea normal-->
        <item name="colorControlNormal">@color/colorText</item>
        <!-- cursor y línea con foco-->
        <item name="colorControlActivated">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColorHint">@color/colorTextDark</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <!-- mensaje de error debajo del EditText-->
    <style name="AppTheme.EditTextError">
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!--boton de formularios-->
    <style name="FormButton" parent="AppTheme">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Card Title -->
    <style name="CardTitleEditText" >
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardTextEditText">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>
