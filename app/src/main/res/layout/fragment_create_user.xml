<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/fragment_affiliate_title"
        android:text="@string/create_user_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_affiliate_data_username_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:hintTextAppearance="@style/AppTheme.FloatingLabel"
        app:errorTextAppearance="@style/AppTheme.EditTextError">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_affiliate_data_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/username"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:theme="@style/FormEditText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_affiliate_data_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:hintTextAppearance="@style/AppTheme.FloatingLabel"
        app:errorTextAppearance="@style/AppTheme.EditTextError">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_affiliate_data_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:theme="@style/FormEditText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_affiliate_data_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/AppTheme.FloatingLabel"
        app:errorTextAppearance="@style/AppTheme.EditTextError">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_affiliate_data_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:theme="@style/FormEditText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_affiliate_data_password_repeat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/AppTheme.FloatingLabel"
        app:errorTextAppearance="@style/AppTheme.EditTextError">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_affiliate_data_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/password_repeat"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:theme="@style/FormEditText"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/fragment_affiliate_create"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        style="@style/FormButton"
        android:text="@string/create" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_create_affiliate_account_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_keyboard_arrow_left" />

</LinearLayout>