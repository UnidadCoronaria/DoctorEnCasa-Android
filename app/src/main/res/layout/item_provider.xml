<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_provider_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_provider_item"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/item_provider_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/logo_ayuda_medica" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">


            <com.unidadcoronaria.doctorencasa.view.CustomTextView
                android:id="@+id/item_provider_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/greyDark"
                android:textSize="18sp"
                app:visual_font_name="light"
                tools:text="Unidad Coronaria" />

            <com.unidadcoronaria.doctorencasa.view.CustomTextView
                android:id="@+id/item_provider_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                app:visual_font_name="light"
                android:text="Quilmes, Ezpeleta" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyLight" />

</LinearLayout>
