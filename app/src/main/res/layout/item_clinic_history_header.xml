<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_affiliate_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_clinic_history_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBackground"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightBackground"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            >


            <com.unidadcoronaria.doctorencasa.view.CustomTextView
                android:id="@+id/item_clinic_history_header_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp"
                app:visual_font_name="light"
                tools:text="Ãšltima consulta de Agustin Bala" />

            <com.unidadcoronaria.doctorencasa.view.CustomTextView
                android:id="@+id/item_clinic_history_header_last_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                app:visual_font_name="light"
                tools:text="23/02/2018" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorTextLight" />



            <com.unidadcoronaria.doctorencasa.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/reason"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp"
                app:visual_font_name="light" />

            <com.unidadcoronaria.doctorencasa.view.CustomTextView
                android:id="@+id/item_clinic_history_header_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                app:visual_font_name="light"
                tools:text="Accumsan ad commodo cras curabitur erat est facilisis feugiat iaculis ipsum lacinia litora lorem mollis nam nec netus nostra platea posuere rhoncus" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@color/colorTextLight" />


            <com.unidadcoronaria.doctorencasa.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/recommendation"
                android:visibility="gone"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp"
                app:visual_font_name="light" />

            <com.unidadcoronaria.doctorencasa.view.CustomTextView
                android:id="@+id/item_clinic_history_header_recommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                app:visual_font_name="light"
                android:visibility="gone"
                tools:text="Accumsan ad commodo cras curabitur erat est facilisis feugiat iaculis ipsum lacinia litora lorem mollis nam nec netus nostra platea posuere rhoncus" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorTextLight" />

            <com.unidadcoronaria.doctorencasa.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/attended_by"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp"
                app:visual_font_name="light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBackground">


                    <ImageView

                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/item_clinic_history_header_doctor_image_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_doctor_new_call" />

                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/item_clinic_history_header_doctor_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:src="@drawable/ic_doctor_new_call" />


                <com.unidadcoronaria.doctorencasa.view.CustomTextView
                    android:id="@+id/item_clinic_history_header_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/item_clinic_history_header_doctor_image_bg"
                    android:textColor="@color/colorTextDark"
                    android:textSize="16sp"
                    app:visual_font_name="light"
                    tools:text="Dr Juan Perez" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorTextLight" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


        <com.unidadcoronaria.doctorencasa.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:text="@string/previous_clinic_histories"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:visual_font_name="light" />

    </LinearLayout>


</LinearLayout>